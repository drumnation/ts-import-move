{
  "name": "ts-import-move",
  "version": "0.1.0",
  "description": "Safely move TypeScript files/folders and update imports",
  "bin": {
    "ts-import-move": "./bin/ts-import-move.js",
    "install-cursor-rules": "./bin/install-cursor-rules.js"
  },
  "scripts": {
    "dev": "tsx bin/index.ts",
    "build": "tsup src/index.ts src/cli-install-rules.ts --format esm --dts",
    "postbuild": "chmod +x dist/index.js && echo '#!/usr/bin/env node' | cat - dist/index.js > temp && mv temp dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "files": [
    "bin/",
    "dist/",
    "docs/",
    "rules/"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "fast-glob": "^3.3.0",
    "ts-morph": "^19.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "tsx": "^3.12.7", 
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.6.12",
  "type": "module"
}
